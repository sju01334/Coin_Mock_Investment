</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

</head>
<script>
var randomIndex1=30;
var randomIndex2=180;
var randomIndex3=100;

$(function(){
  ran();
});

function ran(){
  if(randomIndex1 < 5){
    randomIndex1 += Math.round(Math.random() * 5);
  }else{
    randomIndex1 +=  Math.round((Math.random() < 0.5 ? 1 : -1) * Math.random() * 5);
  }
  
  if(randomIndex2 < 5){
    randomIndex2 += Math.round(Math.random() * 5);
  }else{
    randomIndex2 +=  Math.round((Math.random() < 0.5 ? 1 : -1) * Math.random() * 5);
  }
  
  if(randomIndex3 < 5){
    randomIndex3 += Math.round(Math.random() * 5);
  }else{
    randomIndex3 +=  Math.round((Math.random() < 0.5 ? 1 : -1) * Math.random() * 5);
  }

  $("#price2").html(randomIndex1);
  $('#price3').html(randomIndex2);
  $('#price4').html(randomIndex3);

  setTimeout('ran()', 1000);
}
</script>
<body>

<table class="table">
<tr>
